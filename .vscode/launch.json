  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": [
        "runserver",
        "--noreload"
      ],
      "django": true
    },
    {
      "version": "0.1.0",
      "configurations": [
        {
          "name": "Attach to url with files served from ./out",
          "type": "chrome",
          "request": "attach",
          "port": 5500,
          "url": "http://127.0.0.1:5500/kakeibo/templates/kakeibo/monster.html",
          "webRoot": "${workspaceFolder}/out"
        }
      ],
    }
  ]
}
